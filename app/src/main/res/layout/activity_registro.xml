<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/logo"/>

        <TextView
            android:id="@+id/tv_unionCanina"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Uni칩n Canina"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:hint="Nombre"
            android:background="@drawable/rounded_white"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/colorTextoControles"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/et_apat"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:hint="Apellido paterno"
            android:background="@drawable/rounded_white"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/colorTextoControles"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/et_amat"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:hint="Apellido materno"
            android:background="@drawable/rounded_white"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/colorTextoControles"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/et_correo"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:hint="Correo"
            android:background="@drawable/rounded_white"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/colorTextoControles"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:hint="Contrase침a"
            android:background="@drawable/rounded_white"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/colorTextoControles"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/et_pwd_confirmar"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:hint="Confirmar contrase침a"
            android:background="@drawable/rounded_white"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/colorTextoControles"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:hint="Registrar"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@drawable/rounded_blue"
            android:padding="5dp"
            android:textColorHint="#FFFFFF"
            android:textAllCaps="false"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/ll_iniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_iniciarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicar Sesi칩n"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:padding="10dp"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>