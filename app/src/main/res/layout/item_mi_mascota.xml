<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/iv_fotoMiMascota"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_photo_gray_140dp"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_nombreMiMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Nombre"
            android:textColor="@color/colorTexto"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_razaMiMascota"
            android:layout_below="@+id/tv_nombreMiMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raza"
            android:textColor="@color/colorTexto"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_codigoMiMascota"
            android:layout_below="@+id/tv_razaMiMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ³digo"
            android:textColor="@color/colorTexto"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:id="@+id/ll_estatusMiMascota"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/iv_imagenEstatusMiMascota"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_estatusMiMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="estatus"
                android:layout_marginLeft="2dp"
                android:textSize="12sp"
                android:textStyle="bold"/>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>