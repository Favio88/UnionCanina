<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarMascotaActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@color/colorUnionCanina"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_retroceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_left_white_48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_retroceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Mascota"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/rl_cuerpo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Datos de la mascota"
                android:textColor="@color/colorTexto"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_nombreEditarMiMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="@color/colorTextoControles"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_razaEditarMiMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:text="Raza"
                android:textAlignment="center"
                android:textColor="@color/colorTextoControles"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_sexoEditarMiMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:text="Sexo"
                android:textAlignment="center"
                android:textColor="@color/colorTextoControles"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_colorEditarMiMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:text="Color"
                android:textAlignment="center"
                android:textColor="@color/colorTextoControles"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_f_nacEditarMiMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:text="Fecha de nacimiento"
                android:textAlignment="center"
                android:textColor="@color/colorTextoControles"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_esterilizadoEditarMiMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:text="Esterilizado"
                android:textAlignment="center"
                android:textColor="@color/colorTextoControles"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_enfermedadesEditarMiMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:text="Enfermedades"
                android:textAlignment="center"
                android:textColor="@color/colorTextoControles"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_rasgosEditarMiMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:text="Rasgos físicos"
                android:textAlignment="center"
                android:textColor="@color/colorTextoControles"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_subirFotoEditarMiMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_add_a_photo_gray_48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presiona aquí"
                    android:textColor="@color/colorTextoFondo"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sube fotos de tu mascota"
                    android:textColor="@color/colorTextoFondo"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_guardarEditarMiMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_blue"
            android:text="Guardar mascota"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </FrameLayout>

</LinearLayout>