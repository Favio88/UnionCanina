<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallesMiMascotaActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/colorFondo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:background="@color/colorUnionCanina"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_retroceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_keyboard_arrow_left_white_48dp" />

        <TextView
            android:id="@+id/tv_nombreMiMascota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_retroceso"
            android:text="Nombre de la mascota"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pets_white_18dp"
            android:layout_toRightOf="@id/tv_nombreMiMascota"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight=".8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/iv_fotoMascota"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".55"
                android:background="@drawable/ic_photo_gray_400dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".45"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos de la mascota"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/colorTexto"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Código"
                            android:textColor="@color/colorTexto"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="3dp"/>

                        <TextView
                            android:id="@+id/tv_codigoMiMascota"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Código"
                            android:textColor="@color/colorTextoControles"
                            android:textSize="12sp"
                            android:paddingLeft="3dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Raza"
                            android:textColor="@color/colorTexto"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="3dp"/>

                        <TextView
                            android:id="@+id/tv_razaMiMascota"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Raza"
                            android:textColor="@color/colorTextoControles"
                            android:textSize="12sp"
                            android:paddingLeft="3dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Sexo"
                            android:textColor="@color/colorTexto"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="3dp"/>

                        <TextView
                            android:id="@+id/tv_sexoMiMascota"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Sexo"
                            android:textColor="@color/colorTextoControles"
                            android:textSize="12sp"
                            android:paddingLeft="3dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Color"
                            android:textColor="@color/colorTexto"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="3dp"/>

                        <TextView
                            android:id="@+id/tv_colorMiMascota"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Color"
                            android:textColor="@color/colorTextoControles"
                            android:textSize="12sp"
                            android:paddingLeft="3dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Edad"
                            android:textColor="@color/colorTexto"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="3dp"/>

                        <TextView
                            android:id="@+id/tv_edadMiMascota"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Edad"
                            android:textColor="@color/colorTextoControles"
                            android:textSize="12sp"
                            android:paddingLeft="3dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Estado"
                            android:textColor="@color/colorTexto"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="3dp"/>

                        <TextView
                            android:id="@+id/tv_estadoMiMascota"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Estado"
                            android:textColor="@color/colorTextoControles"
                            android:textSize="12sp"
                            android:paddingLeft="3dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Ciudad"
                            android:textColor="@color/colorTexto"
                            android:textSize="12sp"
                            android:textAlignment="textEnd"
                            android:paddingRight="3dp"/>

                        <TextView
                            android:id="@+id/tv_ciudadMiMascota"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Ciudad"
                            android:textColor="@color/colorTextoControles"
                            android:textSize="12sp"
                            android:paddingLeft="3dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:gravity="center"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rasgos"
                            android:textColor="@color/colorTexto"
                            android:textSize="12sp"
                            android:paddingRight="3dp"/>

                        <TextView
                            android:id="@+id/tv_rasgosMiMascota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rasgos"
                            android:textColor="@color/colorTextoControles"
                            android:textSize="12sp"
                            android:paddingLeft="3dp"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <FrameLayout
                android:id="@+id/fl_editarMiMascota"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_blue"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_edit_white_24dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_reportarMiMascota"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_yellow"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_report_white_24dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_eliminarMiMascota"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_red"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_delete_white_24dp" />

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>