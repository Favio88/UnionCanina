<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesionActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_small"/>

        <TextView
            android:id="@+id/tv_unionCanina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uni칩n Canina"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/ll_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/et_correo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Correo electr칩nico"
                android:background="@drawable/oval_white"
                android:layout_weight="2"
                android:textSize="15sp"
                android:textColor="@color/colorTextoControles"
                android:padding="10dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Contrase침a"
                android:background="@drawable/oval_white"
                android:layout_weight="2"
                android:textSize="15sp"
                android:textColor="@color/colorTextoControles"
                android:padding="10dp"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_iniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btn_iniciarSesion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Iniciar sesi칩n"
                android:layout_weight="2"
                android:textSize="16sp"
                android:background="@drawable/oval_blue"
                android:padding="5dp"
                android:textColorHint="#FFFFFF"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_registrarme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_registrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrarme"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>